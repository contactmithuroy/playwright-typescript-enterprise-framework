{
  "name": "playwright-typescript-enterprise-framework",
  "version": "2.0.0",
  "description": "Enterprise-grade Playwright TypeScript automation framework with CSV-driven testing",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",

    "test:smoke": "playwright test tests/smoke/",
    "report": "playwright show-report",
    "report:open": "playwright show-report --port 9323",
    
    "codegen": "playwright codegen",
    "codegen:url": "playwright codegen https://parabank.parasoft.com/",
    "trace": "playwright show-trace",
    "install:browsers": "playwright install",
    "install:deps": "playwright install-deps",
    "ci": "npm run test -- --reporter=html,junit",
    "ci:smoke": "npm run test:smoke -- --reporter=html,junit"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "e2e",
    "csv-driven",
    "data-driven",
    "enterprise",
    "framework"
  ],
  "author": "Mithu Roy",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^2.15.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
